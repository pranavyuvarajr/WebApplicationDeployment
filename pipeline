pipeline {
    agent any

    stages {

        stage('Cleanup Old Container and Image') {
            steps {
                sh '''
                    docker stop static_web_container || true
                    docker rm static_web_container || true
                    docker rmi static_website || true
                '''
            }
        }

        stage('Clone Repository') {
            steps {
                git 'https://github.com/pranavyuvarajr/WebApplicationDeployment.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t static_website .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name static_web_container -p 8081:80 static_website'
            }
        }
    }
}